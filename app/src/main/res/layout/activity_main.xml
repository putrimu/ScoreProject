<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/lap"
    tools:context="camp.bso.anif.scoreproject.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/colorPutih"
            android:text="PERSIB BANDUNG"
            android:layout_gravity="center_horizontal"
            android:fontFamily="serif-monospace"
            />

        <Button
        android:id="@+id/btn_detailssatu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/persib"
        android:textSize="10sp"
        android:layout_gravity="center_horizontal"/>

        </LinearLayout>



         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="VS"
             android:fontFamily="serif-monospace"
             android:layout_marginTop="20dp"
             android:layout_marginBottom="20dp"
             android:textColor="@color/colorPutih"
             android:layout_gravity="center_horizontal"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_detailsdua"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/persija"
                android:textSize="10sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="30dp"
                />


            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
                android:textColor="@color/colorPutih"
            android:text="PERSIJA JKT"
             android:layout_gravity="center_horizontal"
                android:fontFamily="serif-monospace"
            />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/poinPersib"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="0.5"
                android:gravity="center_horizontal"
                android:textSize="70sp"
                android:text="0"/>



            <TextView
                android:id="@+id/poinPersija"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="0.5"
                android:gravity="center_horizontal"
                android:textSize="70sp"
                android:text="0"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_persib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ Persib"
            android:background="#BFffffff"
            android:layout_weight="0.25"
            android:textSize="10sp"/>

            <Button
                android:id="@+id/btn_minpersib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- Persib"
                android:background="#BFffffff"
                android:layout_weight="0.25"
                android:textSize="10sp"/>

        <Button
            android:id="@+id/btn_persija"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ Persija"
            android:background="#BFffffff"
            android:layout_weight="0.25"
            android:textSize="10sp"/>


            <Button
                android:id="@+id/btn_minpersija"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- Persija"
                android:background="#BFffffff"
                android:layout_weight="0.25"
                android:textSize="10sp"/>
        </LinearLayout>




      <Button
          android:id="@+id/btn_reset"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="RESET"
          />

 <Button
          android:id="@+id/btn_berita"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="BERITA"
          />

        <Button
            android:id="@+id/btn_maps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MAPS"
            />


    </LinearLayout>






</RelativeLayout>
