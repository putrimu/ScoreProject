<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp">


    <TextView
        android:id="@+id/wordhome"
        android:layout_width="wrap_content"
        style="@style/tanding_title"
        android:text="H-"

         />
    <TextView
        android:id="@+id/word1"
        android:layout_width="wrap_content"
        style="@style/tanding_title"
        android:text="Team 1"
        android:layout_weight="0.5"
         />
    <TextView
        android:id="@+id/word3"
        android:layout_width="wrap_content"
        style="@style/tanding_title"
        android:text="vs"
        android:layout_weight="0.33"

         />
    <TextView
        android:id="@+id/word2"
        android:layout_width="wrap_content"
        style="@style/tanding_title"
        android:text="Team 2"
        android:layout_weight="0.5"
         />
    <TextView
        android:id="@+id/wordaway"
        android:layout_width="wrap_content"
        style="@style/tanding_title"
        android:text="-A"
         />



</LinearLayout>
